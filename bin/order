#!/bin/bash
#
# Order the rows of a CSV file by "mcc", "mnc", "lac", "cid"
#
# Input dependencies:
#   Columns "mcc", "mnc", "lac", "cid"
#
# Uses: R
#
# Daniel Weibel <daniel.weibel@unifr.ch> Mar. 2015
#------------------------------------------------------------------------------#

set -e

usage() {
cat <<EOF
Usage:
 ${0##*/} [-o file] [file]

Description:
 Order the rows of a CSV file by "mcc", "mnc", "lac", "cid"
EOF
}
[[ "$1" = --help ]] && usage && exit

# Source common functions
dir() { local w=$(which ${0##*/}); dirname "${w:-$0}"; }
source "$(dir)/../lib/commons.sh"

while getopts ":o:" opt; do
  case $opt in
    o) o=$OPTARG ;;
    \?) Abort "invalid option: -$OPTARG"             ;;
    :)  Abort "option -$OPTARG requires an argument" ;;
  esac
done
shift $(($OPTIND - 1))

[[ -n "$1" ]] && input="$1"
[[ -z "$1" ]] && input=$(TmpFile) && cat - >"$input"
CheckInput "$input"

r=$(TmpFile); rout=$(TmpFile)
cat <<EOF >"$r"
WriteCSV(CellsSort(ReadCSV("$input")), "$rout")
EOF

MyRscript "$r"
IsUnset "$o" && cat "$rout"
IsSet   "$o" && cat "$rout" >"$o"
